@model ListViewModel

@{
    ViewData["Title"] = "Редактор скидок";
}


    <div class="panel panel-default">
        <div class="panel-heading">
            <h1>Редактор скидок</h1>
        </div>
        <div class="panel-footer">
            @using (Html.BeginForm("Create", "Admin", FormMethod.Get)) {
                <input type="submit"
                       class="btn btn-outline-primary"
                       value="Добавить скидку" />
            }
        </div>
        <div class="panel-body">
            <table class="table table-striped table-condensed table-bordered">
                <tr>
                    <th class="text-right">ID</th>
                    <th>Название</th>
                    <th>Дата добавления</th>
                    <th class="text-center">Действия</th>
                </tr>
                @foreach (var item in Model.Discounts) {
                    <tr>
                        <td class="text-right">@item.ID</td>
                        <td>@Html.ActionLink(item.Title, "Edit", new { item.ID })</td>
                        <td class="text-right">@item.DateAdd</td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete", "Admin")) {
                                @Html.Hidden("ID", item.ID)
                                <input type="submit"
                                       class="btn btn-danger"
                                       value="Удалить" />
                            }
                        </td>
                    </tr>
                }
            </table>
            @Html.Partial("_PageNavigator")
        </div>
    </div>
